{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Backend FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: Frontend Streamlit",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "streamlit_app.py"
            ],
            "cwd": "${workspaceFolder}/frontend"
        }
    ]
}
